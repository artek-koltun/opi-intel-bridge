{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":enablePreCommit",
    ":semanticCommitTypeAll(chore)"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
        "matchUpdateTypes": ["digest"],
        "automerge": true
    }
  ]
}
